<Window x:Class="AccountsManager.SetMasterPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountsManager"
        mc:Ignorable="d"
        Title="SetMasterPasswordWindow" Height="300" Width="399" Closed="Window_Closed" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
        <TextBlock Text="Enter Password Here: "  HorizontalAlignment="Center"></TextBlock>
        <PasswordBox x:Name="txtBoxPassword"  Height="23"  VerticalAlignment="Top" MinWidth="200"/>
        </StackPanel>
        <Button Grid.Row="1" Content="Set Password" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
