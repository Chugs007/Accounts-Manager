<Window x:Class="AccountsManager.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangePasswordWindow" Height="300" Width="300">
    <Grid>
        <PasswordBox x:Name="pswrdBoxOld"  HorizontalAlignment="Left" Height="30" Margin="143,47,0,0"  VerticalAlignment="Top" Width="114"/>
        <PasswordBox x:Name="pswrdBoxNew" HorizontalAlignment="Left" Height="30" Margin="143,102,0,0" VerticalAlignment="Top" Width="114"/>
        <Button Content="Change" HorizontalAlignment="Left" Height="25" Margin="102,165,0,0" VerticalAlignment="Top" Width="98" Click="btnClickChangePassword"/>
        <Label Content="Old Password" HorizontalAlignment="Left" Height="30" Margin="10,47,0,0" VerticalAlignment="Top" Width="106"/>
        <Label Content="New Password" HorizontalAlignment="Left" Height="30" Margin="10,102,0,0" VerticalAlignment="Top" Width="106"/>
    </Grid>
</Window>
